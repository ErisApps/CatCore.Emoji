<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<LangVersion>9</LangVersion>
		<Nullable>enable</Nullable>
		<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
		<IsPack>false</IsPack>
	</PropertyGroup>

	<PropertyGroup>
		<IsPackable>true</IsPackable>
		<PackageId>CatCore.Emoji.SourceGeneration.Twemoji</PackageId>
		<PackageDescription>This package contains a sourcegenerator and helper classes to generate a lookup dictionary for Twemoji (Twitter emojis) at compile-time.</PackageDescription>
		<Version>1.0.0</Version>
		<Authors>ErisApps</Authors>
		<PackageProjectUrl>https://github.com/ErisApps/CatCore.Emoji</PackageProjectUrl>
		<RepositoryUrl>https://github.com/ErisApps/CatCore.Emoji</RepositoryUrl>
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.0.1" PrivateAssets="all" />
		<PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.3" PrivateAssets="all" />
	</ItemGroup>

	<ItemGroup Condition="'$(IsPack)' == 'true'">
		<PackageReference Include="CatCore.Emoji.Models" Version="1.0.0" />
	</ItemGroup>

	<ItemGroup Condition="'$(IsPack)' == 'false'">
		<Compile Include="..\CatCore.Emoji.Models\*.cs" Link="CatCore.Emoji.SourceGeneration.Twemoji\Models\*.cs" />
	</ItemGroup>

	<ItemGroup>
		<!-- Package the generator in the analyzer directory of the nuget package -->
		<None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="CatCore.Emoji.SourceGeneration.Twemoji.props" Pack="true" PackagePath="build" />
	</ItemGroup>
</Project>
